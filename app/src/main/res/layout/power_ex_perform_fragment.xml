<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@color/bg"
    android:orientation="vertical"
    android:padding="16dp"
    android:theme="@style/EditTextStyle">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:focusable="false"
            app:errorEnabled="false"
            app:errorTextAppearance="@style/HintTextStyle">

            <EditText
                android:id="@+id/ex_power_perform_start_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Время начала"
                android:cursorVisible="false"
                android:focusable="false"
                android:maxLines="1"
                android:textColor="@color/gray5"
                android:textSize="16sp" />
        </android.support.design.widget.TextInputLayout>

        <FrameLayout
            android:layout_width="8dp"
            android:layout_height="match_parent">

        </FrameLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:focusable="false"
            app:errorEnabled="false"
            app:errorTextAppearance="@style/HintTextStyle">

            <EditText
                android:id="@+id/ex_power_perform_duration"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Продолжительность"
                android:cursorVisible="false"
                android:focusable="false"
                android:maxLines="1"
                android:textColor="@color/gray5"
                android:textSize="16sp" />
        </android.support.design.widget.TextInputLayout>

    </LinearLayout>
    <android.support.design.widget.TextInputLayout
        android:id="@+id/ex_power_perform_sets_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:focusable="false"
        app:errorEnabled="false"
        app:errorTextAppearance="@style/HintTextStyle">

        <EditText
            android:id="@+id/ex_power_perform_sets"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:cursorVisible="false"
            android:focusable="false"
            android:hint="Число подходов"
            android:textSize="16sp" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/ex_power_perform_repeats_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:focusable="false"
        app:errorEnabled="false"
        app:errorTextAppearance="@style/HintTextStyle">

        <EditText
            android:id="@+id/ex_power_perform_repeats"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:cursorVisible="false"
            android:focusable="false"
            android:hint="Повторений в подходе"
            android:textSize="16sp" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/ex_power_perform_weight_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:focusable="false"
        app:errorEnabled="false"
        app:errorTextAppearance="@style/HintTextStyle">

        <EditText
            android:id="@+id/ex_power_perform_weight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:cursorVisible="false"
            android:focusable="false"
            android:hint="Вес за подход (кг)"
            android:textSize="16sp" />
    </android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputLayout
        android:id="@+id/ex_power_perform_note_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:focusable="false"
        app:errorEnabled="false"
        app:errorTextAppearance="@style/HintTextStyle">

        <EditText
            android:id="@+id/ex_power_perform_note"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Заметка"
            android:textSize="16sp" />
    </android.support.design.widget.TextInputLayout>

</LinearLayout>
