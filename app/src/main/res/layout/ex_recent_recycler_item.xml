<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/recent_exercise_item_click_area">

    <LinearLayout
        android:id="@+id/recent_exercise_item_title_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_gravity="start|top"
        android:layout_marginBottom="15dp"
        android:layout_marginTop="15dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/recent_exercise_item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:ems="10"
            android:fontFamily="sans-serif"
            android:lineSpacingExtra="4sp"
            android:maxLines="1"
            android:text="Ирландские пляски"
            android:textColor="@color/gray5"
            android:textSize="16sp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/recent_exercise_item_show_perform_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:ems="10"
            android:fontFamily="sans-serif-light"
            android:lineSpacingExtra="6sp"
            android:maxLines="1"
            android:text="Расчет по типу интенсивности "
            android:textColor="@color/gray5"
            android:textSize="14sp"
            android:textStyle="normal" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_gravity="start|top"
        android:layout_marginBottom="15dp"
        android:layout_marginTop="15dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/recent_exercise_item_show_duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:lineSpacingExtra="4sp"
            android:text="60 мин"
            android:textColor="@color/gray5"
            android:textSize="16sp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/recent_exercise_item_show_intensity_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-light"
            android:lineSpacingExtra="6sp"
            android:text="100 кг"
            android:textColor="@color/gray5"
            android:textSize="14sp"
            android:textStyle="normal" />
    </LinearLayout>


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_gravity="bottom"
        android:layout_alignParentBottom="true"
        android:background="@color/gray1">

    </FrameLayout>
</RelativeLayout>